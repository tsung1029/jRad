F90 = gfortran

F90_DEBUG = gfortran -O3 #fast #-g -Wsurprising -Warray-bounds

F90FLAGS = -I/epp/hdf5/hdf5-1.8.13-gfortran/include -L/epp/hdf5/hdf5-1.8.13-gfortran/lib \
           -I/epp/openmpi/openmpi-1.8.1-gfortran/include -L/epp/openmpi/openmpi-1.8.1-gfortran/lib \
           -I/epp/szip/szip-2.1-mac-intel-64/include -L/epp/szip/szip-2.1-mac-intel-64/lib \
           -lhdf5_fortran -lhdf5 -lmpi_mpifh -lmpi -lsz -lz \
           -L$(MKLROOT)/lib -lmkl_intel_lp64 -lmkl_core -lmkl_sequential -lpthread -lm

#EXTRA_F90FLAGS = -lm

OBJS = hdf5_utilities.o type_definitions.o utilities.o track_utilities.o \
       spec_calculations.o jrad.o

all:$(OBJS)
	$(F90_DEBUG) $(F90FLAGS) $(OBJS) -o jrad $(EXTRA_F90FLAGS)

%.o:%.f90
	$(F90_DEBUG) -c $< $(F90FLAGS) 

clean:
	rm -f $(OBJS) *.mod jrad

